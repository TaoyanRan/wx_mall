/*****************************  头部  *****************************/
.header{
    height:44px;
    align-items: center;
    border-bottom:1rpx solid #e0e0e0;
}

.logo{
    width : 30px;
    height:30px;
    margin:0 10px;
}
.logo image{
    width : 30px;
    height: 30px;
}
.search{
    display: block;
    width: 100%;
    height: 30px;
}
.search_icon{
    margin-top:7px;
}
.search_text{
    color: #999;
    font-size: 14px;
    display: inline-block;
    height:30px;
    line-height:30px;
    vertical-align: top;
    margin-left:10px;
}
.classify{
    height:30px;
    margin:0 10px;
}
.classify_view{
    width: 30px;
    height: 30px;
    text-align: center;
}
.classify_icon{
    color: #5cc922;
}
.classify_text{
    color: #5cc922;
    font-size: 10px;
    flex-direction: row;
    vertical-align: top;
    display: block;
    margin-top:-4px;
}
/*****************************  文字滚动  *****************************/
.text_scroll{
    background-color: #ffc;
    height: 30px;
    line-height: 30px;
}
.text_scroll_icon{
    margin:5px 10px;
}
.text_scroll_text text {
    color: #f96;
    font-weight: 400;
    font-size: 13px;
    vertical-align: middle;
}
/*****************************   轮播图  *****************************/
.swiper{
    height:160px;
}
.swiper swiper-item{
    position: absolute;
    top:0;
    width: 100%;
    height:100%;
}
.slider_item .slider_img{
    width: 100%;
    height:160px;
}
/*****************************   分类  *****************************/
.category{
    border-bottom:1rpx solid #E0E0E0;
    overflow: hidden;
}
.category_item{
    float: left;
    width:25%;
    text-align: center;
    overflow: hidden;
    height: 50px;
    margin:5px 0;
}
.category_logo{
    width :35px;
    height:35px;
}
.category_item_btn{
    justify-content: space-around;
    align-items: center;
    height: 50px;
}
.category_item_btn text{
    font-size: 14px;
    color: #666;
}
/*****************************   热点  *****************************/
.hot_scroll{
    padding: 5px 5px 5px 0;
}
.hot{

}
.hot_title{
    width: 50px;
    box-sizing: border-box;
    margin-right:10px;
}
.hot_title text{
    display: block;
    height:30px;
    margin-top:10px;
    border-left:4px solid red;
    color: #d80000;
    line-height:30px;
    font-size: 14px;
    text-align: right;
    position: relative;
}
.hot_title text:before{
    position: absolute;
    left: -2px;
    top: 50%;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-left: 10px solid #e33;
    content: "";
    margin-top: -10px;
}
.hot_list{
    height:50px;
    width: 100%;
}
.hot_list_text{
    font-size: 14px;
    color: #999;
}
/*****************************   产品列表  *****************************/
.product_title{
    height:30px;
    line-height:30px;
    text-align: center;
    color: #5cc922;
    font-size: 18px;
}
.product_list{
    background: #11BA0F;
    overflow: hidden;
    padding-top:5px;
}
.product_item{
    float: left;
    width: 50%;
}
.product_item_container{
    background: #ffffff;
    border-radius: 5px;
    margin-left:5px;
    position: relative;
}

.product_img{
    margin-top:5px;
    width: 100%;
    height: 180px;
}
.product_name{
    font-size: 14px;
    overflow: hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
    text-align: left;
    margin:5px;
}
.costAndAdd{
    margin: 5px;
    padding-bottom: 25px;
}
.product_cost{
    color: #ff8957;
    font-size: 14px;
    height:30px;
    line-height: 30px;
    text-align: left;
}
.addCart{
    width: 30px;
    height:30px;
    background: url("http://taoyanran.duapp.com/img/cart.png") 0 0 no-repeat;
    background-size: 100% 100%;

    position: absolute;
    bottom:25px;
    right:5px;
}
/*****************************   遮罩层  *****************************/
.mask{
    position: fixed;
    top   :0;
    left  :0;
    right :0;
    bottom:0;
    z-index: 1;
    background: #000;
    opacity: 0.5;
}
/*****************************   选择商品  *****************************/
.cart{
    position: fixed;
    bottom:0;
    left:5px;
    right:5px;
    z-index: 2;
    background-color: #fff;
    padding:10px;
    border-radius:5px 5px 0 0;
}
.cart_close{
    position: absolute;
    right:15px;
    top:15px;
    z-index: 1;
}
.cart_product{
    height:90px;
    border-bottom:1rpx solid #E0E0E0;
    position: relative;
}
.cart_product_img{
    width: 120px;
    height:120px;
    top: -30px;
    border-radius:5px;
    overflow: hidden;
    position: absolute;
    left:0;
}
.cart_product_img image{
    width: 100%;
    height:100%;
}
.cart_product_info{
    margin-left:130px;
    margin-right:30px;
    height:90px;
}
.cart_product_price{
    margin: 10px;
    font-size:14px;
    color: #b52a2c;
}
.cart_product_repertory{
    margin:10px;
    font-size:14px;
    color: #000;
}
.buy_number{
    justify-content: space-between;
    margin:10px 5px;
}
.buyNumber{
    font-size: 14px;
    line-height:32px;
    height:32px;
}

.selectNumber{
    height:32px;
    flex-direction: row;
    width: 115px;
}
.selectNumber button{
    width: 32px;
    height:32px;
    border-radius: 0;
    float: left;
    line-height:32px;
    padding:0;
    margin-left:5px;
}
.selectNumber input{
    float: left;
    width: 36px;
    height:32px;
    line-height:32px;
    border:0;
    background-color: #f4f4f4;
    margin-left:5px;
    text-align: center;
    font-size: 14px;
}
.cart_sure{
    height:32px;
    line-height:32px;
    background: #ff8957;
    text-align: center;
    color: #ffffff;
    border-radius: 0;
}